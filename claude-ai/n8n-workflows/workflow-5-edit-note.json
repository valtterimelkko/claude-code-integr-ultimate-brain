{
  "name": "Claude MCP - Edit Note",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "notion-edit",
        "responseMode": "lastNode",
        "options": {}
      },
      "id": "webhook-edit-note",
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 2,
      "position": [250, 300],
      "webhookId": "notion-edit-note-v2"
    },
    {
      "parameters": {
        "mode": "jsonToBinary",
        "sourceKey": "body.content",
        "convertAllData": false,
        "options": {}
      },
      "id": "convert-to-file-stream",
      "name": "Convert to File Stream",
      "type": "n8n-nodes-base.moveBinaryData",
      "typeVersion": 1.0,
      "position": [470, 300]
    },
    {
      "parameters": {
        "fileName": "=/tmp/n8n_edit_{{ $executionId }}.txt",
        "dataPropertyName": "data"
      },
      "id": "write-temp-file",
      "name": "Write Temp File",
      "type": "n8n-nodes-base.writeBinaryFile",
      "typeVersion": 1,
      "position": [690, 300]
    },
    {
      "parameters": {
        "command": "=python3 /home/node/.claude/scripts/notion/edit_note.py --id \"{{ $json.body.id }}\" --action \"{{ $json.body.action }}\" --content-file /tmp/n8n_edit_{{ $executionId }}.txt && rm /tmp/n8n_edit_{{ $executionId }}.txt"
      },
      "id": "run-python-script",
      "name": "Run Python Script",
      "type": "n8n-nodes-base.executeCommand",
      "typeVersion": 1,
      "position": [910, 300]
    },
    {
      "parameters": {
        "jsCode": "const pythonOutput = items[0].json.stdout;\ntry {\n  return [{ json: JSON.parse(pythonOutput) }];\n} catch (e) {\n  return [{ json: { error: \"Failed to parse Python output\", raw: pythonOutput } }];\n}"
      },
      "id": "parse-output",
      "name": "Parse Output",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1130, 300]
    }
  ],
  "connections": {
    "Webhook": {
      "main": [
        [
          {
            "node": "Convert to File Stream",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Convert to File Stream": {
      "main": [
        [
          {
            "node": "Write Temp File",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Write Temp File": {
      "main": [
        [
          {
            "node": "Run Python Script",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Run Python Script": {
      "main": [
        [
          {
            "node": "Parse Output",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "pinData": {},
  "settings": {
    "executionOrder": "v1"
  },
  "staticData": null,
  "tags": [],
  "triggerCount": 0,
  "versionId": ""
}
